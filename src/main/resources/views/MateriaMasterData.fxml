<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yhlo.oa.controller.MateriaMasterDataController">

    <top>
        <ToolBar prefHeight="40.0" prefWidth="800.0" BorderPane.alignment="CENTER">
            <items>
                <Button fx:id="searchTable" mnemonicParsing="false" onAction="#loadTable" text="查询">
                    <styleClass>
                        <String fx:value="btn-sm" />
                        <String fx:value="btn-info" />
                    </styleClass>
                </Button>

                <Button fx:id="exportOrder" mnemonicParsing="false" text="导出">
                    <styleClass>
                        <String fx:value="btn-sm" />
                        <String fx:value="btn-info" />
                    </styleClass>
                </Button>
            </items>
        </ToolBar>
    </top>


    <center>

        <VBox prefHeight="500.0" prefWidth="${root.width}" BorderPane.alignment="CENTER">
         <children>
             <HBox prefHeight="40.0" prefWidth="${root.width}">
                 <Label fx:id="codeLabel" alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefWidth="75.0" text="物料编码：" textAlignment="CENTER">
                     <HBox.margin>
                         <Insets bottom="10.0" left="10.0" top="10.0" />
                     </HBox.margin>
                 </Label>
                 <TextField  prefWidth="180.0" fx:id="matnrTextField">
                     <HBox.margin>
                         <Insets bottom="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                 </TextField>
             </HBox>
            <HBox prefHeight="400.0" prefWidth="${root.width}">
               <children>
                  <TableView fx:id="tableView" prefHeight="400.0" prefWidth="${root.width}">
                      <columns>
                          <TableColumn fx:id="mColumnSelect" prefWidth="58" sortable="false" style="-fx-alignment:CENTER" text="选择">
                          <graphic>
                              <CheckBox fx:id="mselectAll" mnemonicParsing="false" onAction="#selectAll" />
                          </graphic>
                          </TableColumn>
                      </columns>
                  </TableView>
               </children>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="${root.width}">
               <children>
                  <AnchorPane prefHeight="50" prefWidth="${root.width}">
                     <children>
                        <ChoiceBox fx:id="selectPage" layoutX="10.0" layoutY="5.0" prefHeight="25.0" prefWidth="86.0" />
                        <Label layoutX="106.0" layoutY="5.0" prefHeight="25.0" prefWidth="21.0" text="共" />
                        <TextField fx:id="totalPageText" editable="false" layoutX="133.0" layoutY="5.0" prefHeight="25.0" prefWidth="42.0" />
                         <Label layoutX="181.0" layoutY="5.0" prefHeight="25.0" prefWidth="23.0" text="页" />
                         <Button fx:id="btnPrev" layoutX="204.0" layoutY="5.0" mnemonicParsing="false" onAction="#prevPage" prefHeight="27.0" prefWidth="63.0" text="上一页">
                             <styleClass>
                                 <String fx:value="btn-sm" />
                                 <String fx:value="btn-info" />
                             </styleClass>
                         </Button>
                         <HBox fx:id="pageNoHBox" alignment="CENTER" layoutX="273.0" layoutY="5.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="28.0" prefWidth="417.0" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
                             <GridPane.margin>
                                 <Insets bottom="750.0" left="240.0" top="160.0" />
                             </GridPane.margin>
                         </HBox>
                         <Button fx:id="btnNext" layoutX="694.0" layoutY="5.0" mnemonicParsing="false" onAction="#nextPage" prefHeight="25.0" prefWidth="65.0" text="下一页">
                             <styleClass>
                                 <String fx:value="btn-sm" />
                                 <String fx:value="btn-info" />
                             </styleClass>
                         </Button>
                         <Label layoutX="766.0" layoutY="5.0" prefHeight="25.0" prefWidth="29.0" text="前往" />
                         <TextField fx:id="toPageNoText" editable="false" layoutX="807.0" layoutY="5.0" prefHeight="25.0" prefWidth="43.0" />
                         <Label layoutX="857.0" layoutY="5.0" prefHeight="25.0" prefWidth="33.0" text="页,共" />
                         <TextField fx:id="totalCountText" editable="false" layoutX="899.0" layoutY="5.0" prefHeight="25.0" prefWidth="45.0" />
                         <Button layoutX="953.0" layoutY="5.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="39.0" text="条" />
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
         </children>
        </VBox>
    </center>


    <stylesheets>
        <URL value="@/css/bootstrapfx.css" />
    </stylesheets>
</BorderPane>
